<p id="notice"><%= notice %></p>





<h1 class="white-text">Listing Industries</h1>
<% if user_signed_in? %>
  <form>
    <legend class="white-text">Search</legend>
    <div class='col-xs-4'>
      <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
    </div>
  </form>
<% end %>
<table class="white-text">
  <thead>
    <tr>
      <th>Name</th>
      <th>Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td><%= industry.keywords %></td>
        <td><%= link_to 'Show', industry %></td>
        <td><%= link_to 'Edit', edit_industry_path(industry) %></td>
        <td><%= link_to 'Destroy', industry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Industry', new_industry_path %>
